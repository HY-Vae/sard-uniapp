{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "./src/lib/global.d.ts"],
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"],
      "sard-uniapp": ["./src/lib"],
      "sard-uniapp/*": ["./src/lib/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/*.vue",
    "./packages/**/*",
    "./packages/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "**/docs/**",
    "**/node_modules/**",
    "**/uni_modules/**"
  ]
}
