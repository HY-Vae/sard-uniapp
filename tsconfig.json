{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "sard-uniapp/src/global"],
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"],
      "sard-uniapp": ["packages/sard-uniapp/src"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue", "packages/**/*", "packages/**/*.vue"],
  "exclude": [
    "**/dist/**",
    "**/docs/**",
    "**/node_modules/**",
    "**/uni_modules/**"
  ]
}
