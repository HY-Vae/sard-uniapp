{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["jest", "@dcloudio/types", "node", "../sard-uniapp/src/global"],
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["src/*"],
      "sard-uniapp/*": ["../sard-uniapp/src/*"],
      "sard-uniapp": ["../sard-uniapp/src/"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue"]
}
